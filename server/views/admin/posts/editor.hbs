<nav aria-label="breadcrumb">
<ol class="breadcrumb">
<li class="breadcrumb-item"><a href="/admin">Home</a></li>
<li class="breadcrumb-item"><a href="/admin/posts">Posts</a></li>
<li class="breadcrumb-item active" aria-current="page">
    {{#if post.id }}
        {{ post.title }} 
    {{else}}
        New
    {{/if}}
</li>
</ol>
</nav>

<form action="{{ action }}" method="POST">
{{#if message }}
    <div class="alert alert-dark">{{ message }}</div>
{{/if}}
<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="{{ post.title }}">
    {{!-- // need for blog <textarea name="description">
        {{{ description }}}
    </textarea> --}}
    <small class="form-text text-muted">Blog post title?</small>
</div>
<div class="form-group">
    <label for="body">Body</label>
    <input type="text" name="body" id="body" class="form-control" value="{{ post.body }}">
    <small class="form-text text-muted">Insert HTML of post content.</small>
</div>
<div class="form-group">
    <label for="publishAt">Date</label>
    <input type="DATETIME" name="publishAt" id="publishAt" class="form-control" value="{{ post.publishAt }}">
    <small class="form-text text-muted">Insert Date as YYYY-MM-DD HH:MM:SS.</small>
</div>
<button type="submit" class="btn btn-primary">Save</button>
<a href="/admin/posts" class="btn btn-secondary">Back</a>
</form>
{{#if post.id }}
    <hr>
    <form action="{{ action }}/delete" method="POST" onsubmit="return confirm('Are you sure?')">
    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
    </form>
{{/if}}